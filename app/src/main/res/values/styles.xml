<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar center text style -->
    <style name="tvToolbar" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/ftLarge</item>
        <item name="android:textColor">@color/colorFtBlack</item>
        <item name="android:fontFamily">@font/ft_roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Footer text style -->
    <style name="tvFooter" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/ftSmall</item>
        <item name="android:textColor">@color/colorFtGray</item>
        <item name="android:fontFamily">@font/ft_roboto_regular</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- Header text style -->
    <style name="tvHeader" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/ftMedium</item>
        <item name="android:textColor">@color/colorFtGray</item>
        <item name="android:fontFamily">@font/ft_roboto_medium</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- Error text style -->
    <style name="tvErrorHeader" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/colorFtDarkBlack</item>
        <item name="android:fontFamily">@font/ft_roboto_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Error message text style -->
    <style name="tvErrorFooter" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorFtDarkGray</item>
        <item name="android:fontFamily">@font/ft_roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Green button style -->
    <style name="btnGreen" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorFtGreen</item>
        <item name="android:fontFamily">@font/ft_roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padRegular</item>
        <item name="android:layout_margin">@dimen/mrgMedium</item>
        <item name="android:background">@drawable/btn_bg_green</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
